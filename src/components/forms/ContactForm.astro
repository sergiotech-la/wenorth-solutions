---

<form
  name="contact"
  method="POST"
  data-netlify="true"
  netlify-honeypot="bot-field"
  class="space-y-6"
>
  <input type="hidden" name="form-name" value="contact" />

  <!-- Honeypot -->
  <p class="hidden">
    <label>
      Don't fill this out: <input name="bot-field" />
    </label>
  </p>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <label for="name" class="block text-sm font-medium text-brand-charcoal mb-2">
        Full Name <span class="text-red-500">*</span>
      </label>
      <input
        type="text"
        id="name"
        name="name"
        required
        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-yellow focus:border-transparent transition-shadow"
        placeholder="John Smith"
      />
    </div>

    <div>
      <label for="company" class="block text-sm font-medium text-brand-charcoal mb-2">
        Company
      </label>
      <input
        type="text"
        id="company"
        name="company"
        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-yellow focus:border-transparent transition-shadow"
        placeholder="Your Company"
      />
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <label for="email" class="block text-sm font-medium text-brand-charcoal mb-2">
        Email <span class="text-red-500">*</span>
      </label>
      <input
        type="email"
        id="email"
        name="email"
        required
        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-yellow focus:border-transparent transition-shadow"
        placeholder="john@company.com"
      />
    </div>

    <div>
      <label for="phone" class="block text-sm font-medium text-brand-charcoal mb-2">
        Phone
      </label>
      <input
        type="tel"
        id="phone"
        name="phone"
        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-yellow focus:border-transparent transition-shadow"
        placeholder="(555) 123-4567"
      />
    </div>
  </div>

  <div>
    <label for="service" class="block text-sm font-medium text-brand-charcoal mb-2">
      Service Interest
    </label>
    <select
      id="service"
      name="service"
      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-yellow focus:border-transparent transition-shadow bg-white"
    >
      <option value="">Select a service...</option>
      <option value="consulting">Safety Consulting</option>
      <option value="osha-training">OSHA Training</option>
      <option value="food-safety">Food Safety Training</option>
      <option value="equipment">Safety Equipment</option>
      <option value="other">Other</option>
    </select>
  </div>

  <div>
    <label for="message" class="block text-sm font-medium text-brand-charcoal mb-2">
      Message <span class="text-red-500">*</span>
    </label>
    <textarea
      id="message"
      name="message"
      required
      rows="5"
      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-yellow focus:border-transparent transition-shadow resize-none"
      placeholder="Tell us about your safety needs..."
    ></textarea>
  </div>

  <button
    type="submit"
    class="w-full bg-brand-yellow hover:bg-brand-gold text-brand-charcoal font-semibold py-3 px-6 rounded-lg transition-colors"
  >
    Send Message
  </button>
</form>
