---
interface Props {
  title: string;
  subtitle?: string;
  centered?: boolean;
  class?: string;
}

const { title, subtitle, centered = true, class: className = '' } = Astro.props;

const alignmentClasses = centered ? 'text-center' : '';
---

<div class={`mb-12 ${alignmentClasses} ${className}`}>
  <h2 class="text-3xl md:text-4xl font-bold text-brand-charcoal mb-4">
    {title}
  </h2>
  {subtitle && (
    <p class="text-lg text-brand-slate max-w-2xl mx-auto">
      {subtitle}
    </p>
  )}
</div>
