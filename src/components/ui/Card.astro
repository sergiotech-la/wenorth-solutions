---
interface Props {
  class?: string;
  hover?: boolean;
}

const { class: className = '', hover = false } = Astro.props;

const hoverStyles = hover ? 'hover:shadow-lg hover:-translate-y-1 transition-all duration-300' : '';
---

<div class={`bg-white rounded-lg shadow-sm border border-gray-100 overflow-hidden ${hoverStyles} ${className}`}>
  <slot />
</div>
