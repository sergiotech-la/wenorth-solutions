---
import SectionHeading from '../ui/SectionHeading.astro';
import AnimateOnScroll from '../ui/AnimateOnScroll.astro';

const reasons = [
  {
    number: '01',
    title: 'Industry-Approved Certifications',
    description: 'All our training programs are accredited and recognized by industry regulatory bodies, ensuring your team receives certifications that matter.',
  },
  {
    number: '02',
    title: 'Multilingual Capabilities',
    description: 'We offer training in English, Spanish, and Portuguese to effectively communicate with your diverse workforce and ensure everyone understands safety protocols.',
  },
  {
    number: '03',
    title: 'Customer Satisfaction Focus',
    description: 'Our strategic partnerships with industry leaders allow us to provide comprehensive solutions while maintaining a focus on building lasting relationships.',
  },
];
---

<section class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <AnimateOnScroll animation="slide-in-left">
        <div>
          <SectionHeading
            title="Why Choose WeNorth Solutions?"
            subtitle="We're committed to providing exceptional safety services that protect your workforce and help your business thrive."
            centered={false}
          />

          <div class="space-y-8">
            {reasons.map((reason, index) => (
              <div class="flex gap-4 hover-lift" style={`animation-delay: ${index * 150}ms`}>
                <div class="flex-shrink-0 w-12 h-12 bg-brand-yellow/10 rounded-lg flex items-center justify-center transition-colors hover:bg-brand-yellow/20">
                  <span class="text-brand-yellow font-bold">{reason.number}</span>
                </div>
                <div>
                  <h3 class="font-semibold text-brand-charcoal mb-1">
                    {reason.title}
                  </h3>
                  <p class="text-brand-slate text-sm">
                    {reason.description}
                  </p>
                </div>
              </div>
            ))}
          </div>

          <a
            href="/why-us"
            class="inline-flex items-center gap-2 mt-8 text-brand-yellow font-medium hover:text-brand-gold transition-all hover:gap-3"
          >
            Learn more about us
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </AnimateOnScroll>

      <AnimateOnScroll animation="slide-in-right" delay={200}>
        <div class="relative">
          <div class="aspect-square bg-gray-100 rounded-2xl overflow-hidden">
            <img src="/images/brochure_images/7.webp" alt="Safety professional handshake" class="w-full h-full object-cover" />
          </div>
          <!-- Decorative elements -->
          <div class="absolute -top-4 -right-4 w-24 h-24 bg-brand-yellow/20 rounded-full blur-xl animate-bounce-subtle"></div>
          <div class="absolute -bottom-4 -left-4 w-32 h-32 bg-brand-charcoal/10 rounded-full blur-xl"></div>
        </div>
      </AnimateOnScroll>
    </div>
  </div>
</section>
