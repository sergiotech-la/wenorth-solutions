---
import Button from '../ui/Button.astro';
---

<section class="relative bg-brand-charcoal overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0">
    <img src="/images/brochure_images/8.webp" alt="Construction workers on site" class="w-full h-full object-cover opacity-30" />
    <div class="absolute inset-0 bg-brand-charcoal/60"></div>
  </div>

  <div class="container mx-auto px-4 py-20 md:py-28 relative z-10">
    <div class="max-w-3xl">
      <span class="inline-block bg-brand-yellow/20 text-brand-yellow px-4 py-1 rounded-full text-sm font-medium mb-6 animate-fade-in-down">
        Safety Consulting & Training
      </span>

      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight animate-fade-in-up animate-delay-100">
        Working Together with{' '}
        <span class="text-brand-yellow">Safety</span>{' '}
        in Mind
      </h1>

      <p class="text-lg md:text-xl text-gray-300 mb-8 max-w-2xl animate-fade-in-up animate-delay-200">
        WeNorth Solutions provides expert safety consulting, OSHA and food safety training, and premium personal protective equipment for industrial, construction, and commercial sectors.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 animate-fade-in-up animate-delay-300">
        <Button href="/contact" size="lg">
          Get a Free Quote
        </Button>
        <Button href="/services" variant="outline-light" size="lg">
          Explore Services
        </Button>
      </div>

      <div class="mt-12 flex flex-wrap gap-8 animate-fade-in-up animate-delay-400">
        <div class="text-center">
          <div class="text-3xl font-bold text-brand-yellow">100+</div>
          <div class="text-sm text-gray-400">Clients Served</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-brand-yellow">1K+</div>
          <div class="text-sm text-gray-400">Workers Trained</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-brand-yellow">5+</div>
          <div class="text-sm text-gray-400">Years Experience</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-brand-yellow">95%+</div>
          <div class="text-sm text-gray-400">Satisfaction Rate</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Decorative Element -->
  <div class="absolute bottom-0 right-0 w-1/3 h-full hidden lg:block">
    <div class="absolute inset-0 bg-gradient-to-l from-brand-yellow/20 to-transparent"></div>
  </div>
</section>
