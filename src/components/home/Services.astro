  'certificate-badge': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />`,
  'hard-hat': `<path fill="currentColor" d="M491.243,304.432h-7.878c-8.098-88.411-67.383-164.919-151.257-194.559V76.108c0-11.463-9.293-20.757-20.757-20.757H200.649c-11.463,0-20.757,9.293-20.757,20.757v33.766C96.018,139.513,36.733,216.021,28.635,304.432h-7.878C9.294,304.432,0,313.726,0,325.189v110.703c0,11.463,9.294,20.757,20.757,20.757h470.486c11.463,0,20.757-9.294,20.757-20.757V325.189C512,313.726,502.707,304.432,491.243,304.432z M332.108,154.533c60.103,26.844,102.151,84.094,109.533,149.9H332.108V154.533z M221.405,96.865h69.189v207.568h-69.189V96.865z M179.892,154.533v149.9H70.358C77.741,238.627,119.789,181.377,179.892,154.533z M470.487,415.135H41.513v-69.189h159.135h110.703h159.135V415.135z" transform="scale(0.047)" />`,
};
---

<section class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <SectionHeading
      title="Our Services"
      subtitle="Comprehensive safety solutions to protect your workforce and ensure compliance with industry regulations."
    />

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {services.map((service, index) => (
        <AnimateOnScroll animation="fade-in-up" delay={index * 100}>
          <a href={service.href} class="group block h-full">
            <Card hover class="p-6 h-full">
            <div class="w-12 h-12 bg-brand-yellow/10 rounded-lg flex items-center justify-center mb-4 group-hover:bg-brand-yellow/20 transition-colors">
              <svg class="w-6 h-6 text-brand-yellow" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <Fragment set:html={icons[service.icon]} />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-brand-charcoal mb-2 group-hover:text-brand-yellow transition-colors">
              {service.title}
            </h3>
            <p class="text-brand-slate text-sm">
              {service.description}
            </p>
            <div class="mt-4 text-brand-yellow font-medium text-sm flex items-center gap-1 group-hover:gap-2 transition-all">
              Learn More
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          </Card>
          </a>
        </AnimateOnScroll>
      ))}
    </div>
  </div>
</section>
