---
const currentYear = new Date().getFullYear();
---

<footer class="bg-brand-charcoal text-white">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Brand -->
      <div>
        <img src="/logo-white.svg" alt="WeNorth Solutions" class="h-10 mb-4" />
        <p class="text-gray-400 text-sm mb-3">
          Working Together with Safety in Mind. Let's Shine.
        </p>
        <div class="flex items-center gap-2 text-gray-400 text-sm mb-4">
          <svg class="w-4 h-4 text-brand-yellow" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <span>Boston, Massachusetts</span>
        </div>
        <div class="flex gap-4">
          <a href="https://www.linkedin.com/company/wenorth/" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-white transition-colors" aria-label="LinkedIn">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Services -->
      <div>
        <h4 class="font-semibold mb-4">Services</h4>
        <ul class="space-y-2 text-gray-400 text-sm">
          <li>
            <a href="/services/consulting" class="hover:text-white transition-colors">
              Safety Consulting
            </a>
          </li>
          <li>
            <a href="/services/training/osha" class="hover:text-white transition-colors">
              OSHA Training
            </a>
          </li>
          <li>
            <a href="/services/training/food-safety" class="hover:text-white transition-colors">
              Food Safety Training
            </a>
          </li>
          <li>
            <a href="/products" class="hover:text-white transition-colors">
              Safety Equipment
            </a>
          </li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="font-semibold mb-4">Contact</h4>
        <ul class="space-y-2 text-gray-400 text-sm">
          <li>
            <a
              href="mailto:contact@wenorthsolutions.com"
              class="hover:text-white transition-colors"
            >
              contact@wenorthsolutions.com
            </a>
          </li>
          <li>
            <a
              href="https://wenorthsolutions.com"
              class="hover:text-white transition-colors"
            >
              wenorthsolutions.com
            </a>
          </li>
        </ul>
      </div>

      <!-- Partners -->
      <div>
        <h4 class="font-semibold mb-4">Partners</h4>
        <ul class="space-y-2 text-gray-400 text-sm">
          <li>United Safety Net</li>
          <li>MANKA</li>
          <li>Boston Safety Equipment</li>
        </ul>
      </div>
    </div>

    <div class="border-t border-gray-700 mt-10 pt-8 flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-gray-400">
      <p>&copy; {currentYear} WeNorth Solutions. All rights reserved.</p>
      <p>
        Designed & Developed by{' '}
        <a
          href="https://mtblabs.dev"
          target="_blank"
          rel="noopener noreferrer"
          class="text-brand-yellow hover:text-brand-gold transition-colors"
        >
          MTB Labs
        </a>
      </p>
    </div>
  </div>
</footer>
