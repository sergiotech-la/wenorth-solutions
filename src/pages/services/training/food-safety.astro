---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import SectionHeading from '../../../components/ui/SectionHeading.astro';
import Button from '../../../components/ui/Button.astro';
import AnimateOnScroll from '../../../components/ui/AnimateOnScroll.astro';

const courses = [
  {
    title: 'ServSafe Manager (English)',
    description: 'Comprehensive food safety training and certification for managers and supervisors in food service establishments.',
    duration: '8 hours',
    certification: 'ServSafe Manager Certification',
    features: ['Manager-level certification', 'Nationally recognized', 'Valid for 5 years'],
  },
  {
    title: 'ServSafe Manager (Spanish)',
    description: 'Same comprehensive food safety training delivered entirely in Spanish for Spanish-speaking managers.',
    duration: '8 hours',
    certification: 'ServSafe Manager Certification',
    features: ['Spanish language', 'Manager-level certification', 'Valid for 5 years'],
  },
  {
    title: 'ServSafe Alcohol',
    description: 'Training for responsible alcohol service including legal issues, recognizing intoxication, and intervention techniques.',
    duration: '4 hours',
    certification: 'ServSafe Alcohol Certification',
    features: ['Alcohol service training', 'Liability protection', 'State-approved'],
  },
];

const topics = [
  'Food contamination prevention',
  'Time and temperature control',
  'Personal hygiene practices',
  'Cleaning and sanitizing',
  'Safe food handling procedures',
  'Pest management',
  'Foodborne illness prevention',
  'HACCP principles',
  'Facility and equipment standards',
  'Regulatory compliance',
];
---

<BaseLayout
  title="Food Safety Training | WeNorth Solutions"
  description="ServSafe Manager and Alcohol certification courses in English and Spanish. Partnership with MANKA for quality food safety training."
>
  <!-- Hero Section -->
  <section class="py-20 bg-brand-charcoal">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl">
        <span class="inline-block bg-brand-yellow/20 text-brand-yellow px-4 py-1 rounded-full text-sm font-medium mb-6 animate-fade-in-down">
          Food Safety Training
        </span>
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-6 animate-fade-in-up animate-delay-100">
          ServSafe Certification Courses
        </h1>
        <p class="text-xl text-gray-300 mb-4 animate-fade-in-up animate-delay-200">
          Nationally recognized food safety training in partnership with MANKA.
        </p>
        <p class="text-gray-400 animate-fade-in-up animate-delay-300">
          Available in English and Spanish.
        </p>
      </div>
    </div>
  </section>

  <!-- Courses Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <SectionHeading
        title="Available Courses"
        subtitle="ServSafe certification programs for food service professionals."
      />

      <div class="grid md:grid-cols-3 gap-8">
        {courses.map((course, index) => (
          <AnimateOnScroll animation="fade-in-up" delay={index * 100}>
            <div class="bg-gray-50 rounded-2xl p-8 border border-gray-100 hover:shadow-lg transition-shadow h-full flex flex-col hover-lift">
              <h3 class="text-xl font-bold text-brand-charcoal mb-3">{course.title}</h3>
              <p class="text-brand-slate text-sm mb-4 flex-grow">{course.description}</p>
              <div class="space-y-3 mb-6">
                <div class="flex items-center gap-2 text-sm">
                  <svg class="w-5 h-5 text-brand-yellow" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span class="text-brand-slate">{course.duration}</span>
                </div>
                <div class="flex items-center gap-2 text-sm">
                  <svg class="w-5 h-5 text-brand-yellow" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                  </svg>
                  <span class="text-brand-slate">{course.certification}</span>
                </div>
              </div>
              <ul class="space-y-2">
                {course.features.map((feature) => (
                  <li class="flex items-center gap-2 text-sm text-brand-slate">
                    <svg class="w-4 h-4 text-brand-yellow shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
            </div>
          </AnimateOnScroll>
        ))}
      </div>
    </div>
  </section>

  <!-- Topics Covered -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <SectionHeading
        title="Topics Covered"
        subtitle="Comprehensive food safety curriculum covering all essential areas."
      />

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
        {topics.map((topic, index) => (
          <AnimateOnScroll animation="scale-in" delay={index * 50}>
            <div class="bg-white rounded-lg p-4 text-center border border-gray-100 hover:border-brand-yellow transition-colors hover-lift">
              <span class="text-sm text-brand-charcoal">{topic}</span>
            </div>
          </AnimateOnScroll>
        ))}
      </div>
    </div>
  </section>

  <!-- Partner Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <AnimateOnScroll animation="fade-in-up">
        <div class="bg-brand-charcoal rounded-2xl p-8 md:p-12">
          <div class="grid md:grid-cols-2 gap-8 items-center">
            <div>
              <span class="inline-block bg-brand-yellow/20 text-brand-yellow px-4 py-1 rounded-full text-sm font-medium mb-4">
                Our Partner
              </span>
              <h2 class="text-3xl font-bold text-white mb-4">MANKA</h2>
              <p class="text-gray-300 mb-6">
                Our partnership with MANKA brings you nationally recognized ServSafe certification courses that meet all state and local food safety requirements. Our experienced instructors ensure your team is fully prepared for certification.
              </p>
              <ul class="space-y-2 text-gray-300">
                <li class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-brand-yellow" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  ServSafe certified proctor
                </li>
                <li class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-brand-yellow" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  Bilingual instruction available
                </li>
                <li class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-brand-yellow" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  Group training options
                </li>
              </ul>
            </div>
            <div class="bg-white rounded-xl aspect-video flex items-center justify-center p-8">
              <img src="/images/manka.png" alt="MANKA" class="max-h-full max-w-full object-contain" />
            </div>
          </div>
        </div>
      </AnimateOnScroll>
    </div>
  </section>

  <!-- Who Should Attend -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <SectionHeading
        title="Who Should Attend"
        subtitle="Food safety training for all levels of food service operations."
      />

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {['Restaurant Managers', 'Kitchen Supervisors', 'Food Handlers', 'Bartenders', 'Catering Staff', 'Food Truck Operators', 'Institutional Food Service', 'Retail Food Managers'].map((role, index) => (
          <AnimateOnScroll animation="fade-in-up" delay={index * 50}>
            <div class="bg-white rounded-lg p-6 text-center border border-gray-100 hover:shadow-md transition-shadow hover-lift">
              <span class="text-brand-charcoal font-medium">{role}</span>
            </div>
          </AnimateOnScroll>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-brand-charcoal">
    <div class="container mx-auto px-4 text-center">
      <AnimateOnScroll animation="fade-in-up">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
          Ready to Get ServSafe Certified?
        </h2>
        <p class="text-lg text-gray-300 mb-8 max-w-2xl mx-auto">
          Contact us today to schedule food safety training for your team. Group discounts available.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/contact" size="lg">
            Schedule Training
          </Button>
          <Button href="/services/training/osha" variant="outline-light" size="lg">
            View OSHA Training
          </Button>
        </div>
      </AnimateOnScroll>
    </div>
  </section>
</BaseLayout>
