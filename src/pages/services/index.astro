---
import BaseLayout from '../../layouts/BaseLayout.astro';
import SectionHeading from '../../components/ui/SectionHeading.astro';
import Card from '../../components/ui/Card.astro';
import Button from '../../components/ui/Button.astro';
import AnimateOnScroll from '../../components/ui/AnimateOnScroll.astro';

const services = [
  {
    title: 'Safety Consulting',
    description: 'Comprehensive risk assessments, safety audits, and customized safety programs tailored to your industry and workplace needs.',
    features: [
      'Baseline Safety Assessment',
      'Site General Safety Plan',
      'Custom Safety Programs',
      'Safety Audits & Inspections'
    ],
    href: '/services/consulting',
    icon: 'clipboard-check',
    image: '/images/brochure_images/11.webp',
  },
  {
    title: 'OSHA Training',
    description: 'Industry-approved OSHA training courses available in multiple languages. Partnership with United Safety Net for comprehensive workplace safety education.',
    features: [
      'OSHA 10 & 30-Hour Courses',
      'Fall Protection Training',
      'HAZWOPER Certification',
      'Forklift Safety'
    ],
    href: '/services/training/osha',
    icon: 'academic-cap',
    image: '/images/brochure_images/13.webp',
  },
  {
    title: 'Food Safety Training',
    description: 'ServSafe Manager and Alcohol certification courses in English and Spanish. Partnership with MANKA for quality food safety training.',
    features: [
      'ServSafe Manager (English & Spanish)',
      'ServSafe Alcohol',
      'Food Handler Certification',
      'Manager Proctored Exams'
    ],
    href: '/services/training/food-safety',
    icon: 'shield-check',
    image: '/images/brochure_images/3.webp',
  },
];

const icons: Record<string, string> = {
  'clipboard-check': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />`,
  'academic-cap': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />`,
  'shield-check': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />`,
};
---

<BaseLayout
  title="Our Services | WeNorth Solutions"
  description="Explore WeNorth Solutions' comprehensive safety services including consulting, OSHA training, and food safety training."
>
  <!-- Hero Section -->
  <section class="py-20 bg-brand-charcoal">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl">
        <span class="inline-block bg-brand-yellow/20 text-brand-yellow px-4 py-1 rounded-full text-sm font-medium mb-6 animate-fade-in-down">
          Our Services
        </span>
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-6 animate-fade-in-up animate-delay-100">
          Comprehensive Safety Solutions
        </h1>
        <p class="text-xl text-gray-300 animate-fade-in-up animate-delay-200">
          From consulting to training and equipment, we provide everything you need to create and maintain a safe workplace.
        </p>
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="space-y-12">
        {services.map((service, index) => (
          <div class={`grid lg:grid-cols-2 gap-12 items-center ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
            <AnimateOnScroll animation={index % 2 === 0 ? 'slide-in-left' : 'slide-in-right'} class={index % 2 === 1 ? 'lg:order-2' : ''}>
              <div>
                <div class="w-16 h-16 bg-brand-yellow/10 rounded-xl flex items-center justify-center mb-6">
                  <svg class="w-8 h-8 text-brand-yellow" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <Fragment set:html={icons[service.icon]} />
                  </svg>
                </div>
                <h2 class="text-3xl font-bold text-brand-charcoal mb-4">{service.title}</h2>
                <p class="text-brand-slate mb-6">{service.description}</p>
                <ul class="space-y-2 mb-8">
                  {service.features.map((feature) => (
                    <li class="flex items-center gap-2 text-brand-slate">
                      <svg class="w-5 h-5 text-brand-yellow shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      {feature}
                    </li>
                  ))}
                </ul>
                <Button href={service.href}>
                  Learn More
                </Button>
              </div>
            </AnimateOnScroll>
            <AnimateOnScroll animation={index % 2 === 0 ? 'slide-in-right' : 'slide-in-left'} delay={200} class={index % 2 === 1 ? 'lg:order-1' : ''}>
              <div class="rounded-2xl aspect-video overflow-hidden">
                <img src={service.image} alt={service.title} class="w-full h-full object-cover" />
              </div>
            </AnimateOnScroll>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Equipment Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <AnimateOnScroll animation="slide-in-left">
          <div>
            <div class="w-16 h-16 bg-brand-yellow/10 rounded-xl flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-brand-yellow" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
              </svg>
            </div>
            <h2 class="text-3xl font-bold text-brand-charcoal mb-4">Safety Equipment</h2>
            <p class="text-brand-slate mb-6">
              Browse our selection of certified NIOSH and ANSI protective equipment through our partner, Boston Safety Equipment. We offer premium PPE for all industries.
            </p>
            <ul class="space-y-2 mb-8">
              <li class="flex items-center gap-2 text-brand-slate">
                <svg class="w-5 h-5 text-brand-yellow shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Fall Protection Equipment
              </li>
              <li class="flex items-center gap-2 text-brand-slate">
                <svg class="w-5 h-5 text-brand-yellow shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Head & Eye Protection
              </li>
              <li class="flex items-center gap-2 text-brand-slate">
                <svg class="w-5 h-5 text-brand-yellow shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Respiratory Protection
              </li>
              <li class="flex items-center gap-2 text-brand-slate">
                <svg class="w-5 h-5 text-brand-yellow shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                High Visibility Apparel
              </li>
            </ul>
            <Button href="/products">
              Browse Equipment Catalog
            </Button>
          </div>
        </AnimateOnScroll>
        <AnimateOnScroll animation="slide-in-right" delay={200}>
          <div class="rounded-2xl aspect-video overflow-hidden">
            <img src="/images/brochure_images/4.webp" alt="Personal protective equipment" class="w-full h-full object-cover" />
          </div>
        </AnimateOnScroll>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-brand-charcoal">
    <div class="container mx-auto px-4 text-center">
      <AnimateOnScroll animation="fade-in-up">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
          Need a Custom Solution?
        </h2>
        <p class="text-lg text-gray-300 mb-8 max-w-2xl mx-auto">
          We understand that every business has unique safety requirements. Contact us to discuss your specific needs.
        </p>
        <Button href="/contact" size="lg">
          Request a Quote
        </Button>
      </AnimateOnScroll>
    </div>
  </section>
</BaseLayout>
